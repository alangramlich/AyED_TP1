from modulos import GeneradorArchivoOrdenado
import unittest
import os
#Comprueba que el archivo quedó ordenado
def esta_ordenada(archivo):
    with open(archivo, 'r') as file:
        datos = [int(x) for x in file.read().split(',')]
        return datos == sorted(datos)

class TestOrden(unittest.TestCase):

    def test_archivo_ordenado(self):
        self.assertTrue(esta_ordenada('datosPruebaOrdenados.txt'))

    def test_archivo_desordenado(self):
        with open('datosPruebaDesordenados.txt', 'a') as f:
            f.write(',5')
        self.assertFalse(esta_ordenada('datos.txt'))

if __name__ == 'datosPruebaOrdenados':
    unittest.main()

#Comprueba que ambos archivos, el original y el ordenado tienen el mismo tamaño

def mismo_tamano(archivo1, archivo2):
    return os.path.getsize(archivo1) == os.path.getsize(archivo2)

class TestTamano(unittest.TestCase):

    def test_mismo_tamano(self):
        self.assertTrue(mismo_tamano('datosPruebaOrdenados.txt', 'datosPruebaDesordenados.txt'))


if __name__ == 'datosPruebaOrdenados':
    unittest.main()



