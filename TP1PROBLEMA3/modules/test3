import os
import unittest

def misma_longitud(archivo1, archivo2):
    return os.path.getsize(archivo1) == os.path.getsize(archivo2)

class TestLongitudArchivos(unittest.TestCase):

    def test_misma_longitud(self):
        """
        Compruebo que el archivo generado con los 
        datos ordenados sea de igual tamaño que el archivo
        original
       
        """
        self.assertTrue(misma_longitud('datosPruebaOrdenados.txt', 'datosPruebaDesordenados.txt'))
        self.assertFalse(misma_longitud('datosOrdenados.txt', 'datosPruebaDesordenados.txt'))

if __name__ == '__main__':
    unittest.main()

def archivo_ordenado(archivo):
    with open(archivo, 'r') as f:
        contenido = f.readlines()
    return contenido == sorted(contenido)

class TestOrdenArchivos(unittest.TestCase):

    def test_archivo_ordenado(self):
        """
        Compruebo que los datos de el archivo 
        generado estén ordenados
        
        """
        self.assertTrue(archivo_ordenado('datosPruebaOrdenados.txt'))
        self.assertFalse(archivo_ordenado('datosPruebaDesordenados.txt'))

if __name__ == '__main__':
    unittest.main()
































